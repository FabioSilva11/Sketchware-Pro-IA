<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="24dp" />

    <!-- Informações da Conta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status da Conta"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_account_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conta ativa"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurface" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botões de Configuração -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Editar Perfil"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_profile"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.TextButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutline" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_privacy_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Configurações de Privacidade"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_lock"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.TextButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOutline" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_notification_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Configurações de Notificação"
                android:textAllCaps="false"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_info"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Botão de Logout -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Sair da Conta"
        android:textAllCaps="false"
        android:textColor="?attr/colorError"
        app:icon="@drawable/ic_logout"
        app:iconGravity="textStart"
        app:iconTint="?attr/colorError"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>
