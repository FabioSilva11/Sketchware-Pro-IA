<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/specialty_surface">

    <!-- Category Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/category_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/specialty_icon_color"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SpecialtyCategoryTitleStyle" />

            <TextView
                android:id="@+id/category_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SpecialtyCategoryDescriptionStyle"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/category_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/specialty_checkbox_color" />

    </LinearLayout>

    <!-- Subcategories Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subcategories_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

</LinearLayout>
