<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Describe the layout you want to generate or modify:"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: Add a login button at the top"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:gravity="top|start" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generation options:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkbox_preserve_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preserve existing elements"
        android:textSize="13sp"
        android:checked="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keeps existing views and IDs, adding only new elements"
        android:textSize="11sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkbox_style_consistency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maintain style consistency"
        android:textSize="13sp"
        android:checked="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Applies the same color, spacing and style patterns from the current layout"
        android:textSize="11sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginStart="32dp" />

</LinearLayout>
