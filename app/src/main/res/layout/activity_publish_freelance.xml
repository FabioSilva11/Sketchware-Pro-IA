<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeOverlay.Material3.ActionBar"
            app:titleTextColor="?attr/colorOnSurfaceVariant" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Title">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_short_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Short description (max. 200)"
                        android:layout_marginTop="12dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="200">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_short_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_long_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Long description"
                        android:layout_marginTop="12dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_long_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="4"
                            android:gravity="top|start" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Target Skills"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipgroup_skills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="false"
                        app:selectionRequired="false"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="8dp"
                        android:layout_marginTop="8dp" />



                </LinearLayout>
            </ScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publish"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>





