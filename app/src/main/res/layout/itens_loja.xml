<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/app_icon"
            android:focusable="false"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sketch_app_icon"
            android:scaleType="fitCenter" />
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="50">
            <TextView
                android:id="@+id/app_name"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Ton: maquininha"
                android:textSize="12sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/app_categoria"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="Finanças"
                android:textSize="12sp"
                android:textColor="#000000" />
            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/app_rating"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="4.5"
                    android:textSize="12sp"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/imageview3"
                    android:focusable="false"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/abc_ic_star_black_48dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/app_autor"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Fábio Silva"
            android:textSize="12sp"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
