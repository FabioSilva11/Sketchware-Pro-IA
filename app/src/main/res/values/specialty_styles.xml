<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos específicos para a tela de especialidades -->
    
    <!-- Estilo para o título da tela -->
    <style name="SpecialtyTitleStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/specialty_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <!-- Estilo para o texto das categorias -->
    <style name="SpecialtyCategoryTitleStyle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/specialty_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <!-- Estilo para a descrição das categorias -->
    <style name="SpecialtyCategoryDescriptionStyle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/specialty_text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Estilo para os chips das subcategorias -->
    <style name="SpecialtyChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/specialty_chip_text</item>
        <item name="chipBackgroundColor">@color/specialty_chip_background</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/specialty_chip_stroke</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">36dp</item>
    </style>
    
    <!-- Estilo para o botão principal -->
    <style name="SpecialtyPrimaryButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/specialty_button_text</item>
        <item name="backgroundTint">@color/specialty_button_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Estilo para o botão secundário -->
    <style name="SpecialtySecondaryButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/specialty_button_secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Estilo para o contador de seleções -->
    <style name="SpecialtyCounterStyle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/specialty_button_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
